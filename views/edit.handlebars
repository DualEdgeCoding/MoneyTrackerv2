<div class="container">
    <h1 style="text-align: center;">Edit Transaction</h1>
    <form action="/transaction/edit/{{trans.id}}?_method=PUT" method="post">
    <div class="form-group">
        <label for="purpose">Purpose</label>
        <input type="text" name="purpose" value="{{trans.purpose}}" class="form-control">
    </div>
    <div class="form-group">
        <label for="date">Date</label>
        <input type="text" name="date" value="{{trans.date}}" class="form-control">
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <input type="text" name="description" value="{{trans.description}}" class="form-control" placeholder="short description of transaction">
    </div>
    <div class="form-group">
        <label for="type">Type</label>
        <select name="type" class="custom-select">
            <option value="withdrawal">Withdrawal</option>
            <option value="deposit">Deposit</option>
        </select>
    </div>
    <div class="form-group">
        <label for="amount">Amount</label>
        <input type="text" name="amount" value="{{trans.amount}}" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Edit</button>
    </form>
</div>